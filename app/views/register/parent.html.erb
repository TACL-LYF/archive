<% provide(:title, 'LYF Camp Registration 2017 | Parent Information') %>
<div class="row">
  <div class="col-md-12">
    <h2>Parent Information</h2>
  </div>
</div>
<%= form_for @family, url: wizard_path, method: :put do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row space-above-wide">
    <div class="col-md-4 form-group">
      <%= f.label :primary_parent_first_name, "First Name" %>
      <%= f.text_field :primary_parent_first_name, class: 'form-control' %>
    </div>
    <div class="col-md-4 form-group">
      <%= f.label :primary_parent_last_name, "Last Name" %>
      <%= f.text_field :primary_parent_last_name, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 form-group">
      <%= f.label :primary_parent_email, "Email" %>
      <%= f.email_field :primary_parent_email, class: 'form-control' %>
      <p class="help-block">This will be our primary means of contact. Please double check this for accuracy!</p>
    </div>
    <div class="col-md-4 form-group">
      <%= f.label :primary_parent_phone_number, "Phone Number" %>
      <%= f.telephone_field :primary_parent_phone_number, placeholder: '(###) ###-####', class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h4>Secondary Parent Contact Information <small>(Optional)</small></h4>
    </div>
  </div>
  <div class="row space-above-wide">
    <div class="col-md-4 form-group">
      <%= f.label :secondary_parent_first_name, "First Name" %>
      <%= f.text_field :secondary_parent_first_name, class: 'form-control' %>
    </div>
    <div class="col-md-4 form-group">
      <%= f.label :secondary_parent_last_name, "Last Name" %>
      <%= f.text_field :secondary_parent_last_name, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 form-group">
      <%= f.label :secondary_parent_email, "Email" %>
      <%= f.email_field :secondary_parent_email, class: 'form-control' %>
    </div>
    <div class="col-md-4 form-group">
      <%= f.label :secondary_parent_phone_number, "Phone Number" %>
      <%= f.telephone_field :secondary_parent_phone_number, placeholder: '(###) ###-####', class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h4>Address</h4>
    </div>
  </div>
  <div class="row space-above-wide">
    <div class="col-md-2 form-group">
      <%= f.label :suite, "Apt/Suite" %>
      <%= f.text_field :suite, class: 'form-control' %>
    </div>
    <div class="col-md-4 form-group">
      <%= f.label :street, "Street Address" %>
      <%= f.text_field :street, class: 'form-control' %>
    </div>
    <div class="col-md-4 form-group">
      <%= f.label :city, "City" %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 form-group">
      <%= f.label :state, "State" %>
      <%= f.text_field :state, class: 'form-control' %>
    </div>
    <div class="col-md-3 form-group">
      <%= f.label :zip, "Zip" %>
      <%= f.text_field :zip, class: 'form-control' %>
    </div>
  </div>
  <div class="row space-above-wide">
    <div class="col-md-12 form-group">
      <%= f.label :first_time, "Is this the first time your family is registering a camper at LYF Camp?" %><br>
      <%= f.label "first_time_true", class: 'radio-inline' do %>
        <%= f.radio_button :first_time, true %> Yes
      <% end %>
      <%= f.label "first_time_false", class: 'radio-inline' do %>
        <%= f.radio_button :first_time, false %> No
      <% end %>
    </div>
  </div>
  <div class="row space-above-chasm">
    <div class="col-md-2">
      <%= f.submit "Continue", class: "btn btn-block" %>
    </div>
  </div>
<% end %>
